<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SuggestActivity">
    <EditText
        android:id="@+id/suggest_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_translatte"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:hint="您的意见和建议"
        android:gravity="top|left"
        />
    <Button
        android:id="@+id/suggest_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:background="@drawable/btn_vipbgbutton"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#000"
        android:text="QQ群：771657637"/>
</LinearLayout>