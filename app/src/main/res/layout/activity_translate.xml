<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".ui.TranslateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/translate_topleft"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="中文"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/translate_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/exchange"/>
        <TextView
            android:id="@+id/translate_topRight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="英语"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/translate_fnayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:src="@drawable/fanyi"/>
    </LinearLayout>
    <EditText
        android:id="@+id/translate_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_translatte"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:hint="输入要翻译的单词和句子"
        android:gravity="top|left"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_margin="5dp"
        />
    <EditText
        android:id="@+id/translate_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/bg_translatte"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:hint="输入要翻译的单词和句子"
        android:gravity="top|left"
        />
</LinearLayout>